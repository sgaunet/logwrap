    "version": "0.2.0",
    "configurations": [
        {
            "name": "LogWrap - Basic Echo",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/logwrap",
            "args": ["echo", "Hello World"]
        },
        {
            "name": "LogWrap - JSON Format",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/logwrap",
            "args": ["-format", "json", "echo", "Hello World"]
        },
        {
            "name": "LogWrap - Structured Format",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/logwrap",
            "args": ["-format", "structured", "echo", "Hello World"]
        },
        {
            "name": "LogWrap - With Colors",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/logwrap",
            "args": ["-colors", "echo", "Hello World"]
        },
        {
            "name": "LogWrap - Custom Template",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/logwrap",
            "args": ["-template", "[{{.Timestamp}}] ", "echo", "Hello World"]
        },
        {
            "name": "LogWrap - UTC Timestamps",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/logwrap",
            "args": ["-utc", "echo", "Hello World"]
        },
        {
            "name": "LogWrap - Mixed Output (stdout/stderr)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/logwrap",
            "args": ["sh", "-c", "echo 'stdout message'; echo 'ERROR: stderr message' >&2"]
        },
        {
            "name": "LogWrap - With Config File",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/logwrap",
            "args": ["-config", "${workspaceFolder}/examples/basic.yaml", "echo", "Hello World"]
        },
        {
            "name": "LogWrap - Long Running (ping)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/logwrap",
            "args": ["-format", "json", "ping", "-c", "3", "127.0.0.1"]
        },
        {
            "name": "LogWrap - Help",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/logwrap",
            "args": ["-help"]
        }
    ]
}